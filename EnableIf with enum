// The value will be activate depending on the value of enam

    [EnableIf("type", TrapType.Saw)]
        public float sawMoveDistance;
        
        public enum TrapType
        {
            Lava,
            Gate,
            Saw, 
            Hammer
        }
        public TrapType type = TrapType.Gate;
        
        
        or use [ShowIf("type", TrapType.Saw)] if you don't want to see the value in the inspector
        
